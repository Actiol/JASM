<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="GIMI_ModManager.WinUI.Views.DebugPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:controls1="using:GIMI_ModManager.WinUI.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:GIMI_ModManager.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:GIMI_ModManager.WinUI.Models"
    d:DataContext="{d:DesignInstance Type=models:NewModModel}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <controls1:EditableTextBlock
                Width="200"
                IsEditMode="{x:Bind ViewModel.IsEditing, Mode=OneWay}"
                Style="{ThemeResource DisplayTextBlockStyle}"
                Text="{x:Bind ViewModel.TestString, Mode=TwoWay}" />
            <Button Command="{x:Bind ViewModel.ToggleEditingCommand}" Content="EditText" />
        </StackPanel>
    </Grid>
</Page>
